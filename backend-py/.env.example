PORT=8000
FRONTEND_URL=http://localhost:3000,http://localhost:3001
LOG_LEVEL=INFO

# Browser-based news scraping (Playwright + Chromium)
# Set to 'true' for local development with deep-dive news scraping
# Set to 'false' for production on Render free tier (512MB RAM)
# Default: false (disabled to conserve memory)
ENABLE_BROWSER_SCRAPING=false

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Alternative: Anthropic Claude
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# AI Service Provider (openai, anthropic, or mock)
AI_PROVIDER=openai

# AI Model Configuration
OPENAI_MODEL=gpt-4o-mini
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
